{
  "name": "magj-learn",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "format": "prettier --write \"./src\"",
    "lint": "eslint . --ext .js,.ts,.astro",
    "lint:fix": "eslint . --ext .js,.ts,.astro --fix",
    "type-check": "tsc --noEmit",
    "commit": "cz"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,astro}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@astrojs/mdx": "^4.3.12",
    "@astrojs/sitemap": "^3.6.0",
    "@astrojs/starlight": "^0.36.2",
    "@fontsource/inter": "^5.2.8",
    "astro": "^5.16.0",
    "rehype-mathjax": "^7.1.0",
    "rehype-mermaid": "^3.0.0",
    "remark-gfm": "^4.0.0",
    "remark-math": "^6.0.0",
    "remark-toc": "^9.0.0",
    "starlight-links-validator": "^0.15.0",
    "starlight-theme-rapide": "^0.4.0"
  },
  "engines": {
    "node": "24.x"
  },
  "devDependencies": {
    "typescript": "^5.8.2"
  }
}
